{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    // recommended
    "strict": true,
    "skipLibCheck": true,
    "noFallthroughCasesInSwitch": true,

    // features
    "lib": ["ESNext"],
    "target": "ESNext",
    "module": "ESNext",
    "moduleDetection": "force",
    "allowJs": true,

    // bundling
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "noEmit": true
  },
  "exclude": ["node_modules"]
}
